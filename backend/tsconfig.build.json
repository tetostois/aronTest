{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "**/*.d.ts"
  ]
}
